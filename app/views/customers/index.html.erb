<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
    <div class="row">
      <div class="col-lg-6">
        <p>お客様情報が表示されます。</p>
      </div>
      <div class="col-lg-6">
        <%= link_to '顧客登録', new_customer_path, class: "btn btn-default pull-right" %>
      </div>
    </div>

<!-- 追加 START -->
    <%= search_form_for @q do |f| %>
      <div class="row">
        <div class="col-sm-3 col-xs-12">
          <div class="form-group">
            <%= f.label :family_name_cont, '姓' %>
            <%= f.search_field :family_name_cont, class: "form-control input-sm" %>
          </div>
        </div>
        <div class="col-sm-3 col-xs-12">
          <div class="form-group">
            <%= f.label :given_name_cont, '名' %>
            <%= f.search_field :given_name_cont, class: "form-control input-sm" %>
          </div>
        </div>
        <div class="col-sm-3 col-xs-12">
          <div class="form-group">
            <%= f.label :detail_cont, '詳細' %>
            <%= f.search_field :detail_cont, class: "form-control input-sm" %>
          </div>
        </div>
        <div class="col-sm-3 col-xs-12">
          <div class="form-group">
            <%= f.label :account_number_cont, '会員番号' %>
            <%= f.search_field :account_number_cont, class: "form-control input-sm" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= f.submit "検索", class: "btn btn-default" %>
          <%= link_to "リセット", request.path, class:"btn btn-default" %>
        </div>
      </div>
    <% end %>

    <hr />
    <table class="table table-striped">
      <thead>
        <th>姓</th>
        <th>名</th>
        <th>詳細</th>
        <th>会員番号</th>
        <th>リンク</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.detail %></td>
            <td><%= customer.account.number %></td>
            <td><%= link_to '詳細', customer, class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
  </div>
</div>